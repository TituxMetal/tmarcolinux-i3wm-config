# -------------------------------------------------------------------------------------------------
# ORIENTATION
# -------------------------------------------------------------------------------------------------
bindsym $mod+b split h
bindsym $mod+v split v

# -------------------------------------------------------------------------------------------------
# FULLSCREEN
# -------------------------------------------------------------------------------------------------
bindsym $mod+f fullscreen

# -------------------------------------------------------------------------------------------------
# MENU
# -------------------------------------------------------------------------------------------------
bindsym $mod+d exec --no-startup-id rofi -show run -font "Noto Sans 13"

# -------------------------------------------------------------------------------------------------
# RESTART / RELOAD
# -------------------------------------------------------------------------------------------------
bindsym $mod+Shift+r restart
bindsym $mod+Shift+c reload

# -------------------------------------------------------------------------------------------------
# KILL FOCUSED WINDOW
# -------------------------------------------------------------------------------------------------
bindsym $mod+Shift+q kill

# -------------------------------------------------------------------------------------------------
# SYSTEM MODE
# -------------------------------------------------------------------------------------------------
set $systemMode Exit mode press: (l) logout, (o) poweroff, (r) reboot
mode "$systemMode"{
  bindsym l exec --no-startup-id i3-msg exit, mode "default"
  bindsym o exec --no-startup-id systemctl poweroff -i, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"

  # back to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$systemMode"

# -------------------------------------------------------------------------------------------------
# RESIZE MODE
# -------------------------------------------------------------------------------------------------
set $resizeMode Resize mode press: (h) - width, (j) - height, (k) + height, (l) + width
mode "$resizeMode" {
  # Vim mode
  bindsym $left resize shrink width 10 px or 10 ppt
  bindsym $up resize grow height 10 px or 10 ppt
  bindsym $down resize shrink height 10 px or 10 ppt
  bindsym $right resize grow width 10 px or 10 ppt

  # Alternative mode
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "$resizeMode"

# -------------------------------------------------------------------------------------------------
# FLOATING MODE
# -------------------------------------------------------------------------------------------------
bindsym $mod+Shift+space floating toggle

# Change the focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# -------------------------------------------------------------------------------------------------
# SCRATCHPAD MODE
# -------------------------------------------------------------------------------------------------
bindsym $mod2+Shift+minus move scratchpad
bindsym $mod2+Control+minus scratchpad show

# -------------------------------------------------------------------------------------------------
# TOGGLE CONTAINER LAYOUT STACKED / TABBED / SPLIT
# -------------------------------------------------------------------------------------------------
bindsym $mod+Tab layout toggle all

# -------------------------------------------------------------------------------------------------
# VOLUME KEYS
# -------------------------------------------------------------------------------------------------
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -q set Master 2%- unmute"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -q set Master 2%+ unmute"
bindsym XF86AudioMute exec --no-startup-id "amixer -q -D pulse set Master toggle"

# -------------------------------------------------------------------------------------------------
# AUTOSTART APPLICATIONS
# -------------------------------------------------------------------------------------------------
# Authentication dialog
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Pamac tray
exec --no-startup-id pamac-tray

# Volume icon
exec --no-startup-id volumeicon

# Network
exec --no-startup-id nm-applet

# Numlock activated
exec_always --no-startup-id numlockx on

# Picom
exec --no-startup-id picom --config ~/.config/i3/picom.conf

# Autostart application
exec --no-startup-id dex -a

# -------------------------------------------------------------------------------------------------
# APPLICATIONS KEYS
# -------------------------------------------------------------------------------------------------
bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+KP_Enter exec --no-startup-id pcmanfm
bindsym $mod+$shift+p exec --no-startup-id pamac-manager

# -------------------------------------------------------------------------------------------------
# I3 STATUS BAR
# -------------------------------------------------------------------------------------------------
bar {
  position top
  status_command i3status -c ~/.config/i3/i3status.conf
  font pango:Noto Mono Regular 11

  # Uncomment lines depending on what machine we are
  # id bar-1
  #   output $pScreen
  #   tray_output $pScreen

  # id bar-2
  #   output $leftScreen

  # id bar-3
  #   output $rightScreen

  colors {
    background $black
    statusline $white
    separator  $gray

#                       border        background    text
    focused_workspace   $lightGray    $lightBlue    $white
    active_workspace    $lightGray    $lightBlue    $gray
    inactive_workspace  $lightGray    $black        $white
    binding_mode        $yellow       $black        $white
    urgent_workspace    $red          $black        $white
  }
}